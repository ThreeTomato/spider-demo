<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spider.dao.SiteMapper">

	<resultMap type="com.spider.entity.Site" id="siteMap">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="domain" column="domain"/>
		<result property="startUrl" column="start_url"/>
		<result property="linkFilterType" column="link_filter_type"/>
	</resultMap>

	<insert id="insert" parameterType="com.spider.entity.Site">
		INSERT INTO site VALUES(
			#{id},
			#{name},
			#{domain},
			#{startUrl},
			#{linkFilterType}
		)
	</insert>

	<select id="delete" parameterType="int">
		DELETE FROM site WHERE id = #{id}
	</select>
	
	<update id="update" parameterType="com.spider.entity.Site">
		UPDATE site SET id = #{id}
		<if test="name != null">
			,name = #{name}
		</if>
		<if test="domain != null">
			,domain = #{domain}
		</if>
		<if test="startUrl != null">
			,start_url = #{startUrl}
		</if>
		<if test="linkFilterType > 0">
			,link_filter_type = #{linkFilterType}
		</if>
	</update>
	
	<select id="getById" parameterType="int" resultMap="siteMap">
		SELECT * FROM site WHERE id = #{id}
	</select>
	
	<select id="getList" parameterType="com.spider.entity.Site" resultMap="siteMap">
		SELECT * FROM site WHERE 1 = 1 
		<if test="name != null">
			AND name like CONCAT('%',#{name},'%')
		</if>
		<if test="domain != null">
			AND domain like CONCAT('%',#{domain},'%')
		</if>
		<if test="startUrl != null">
			AND start_url like CONCAT('%',#{startUrl},'%')
		</if>
		<if test="linkFilterType > 0">
			AND link_filter_type = #{linkFilterType}
		</if>
		ORDER BY id DESC
	</select>
	
</mapper>